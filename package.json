{
  "name": "cloudflare-email-manager",
  "version": "1.0.0",
  "description": "基于Cloudflare的简洁邮箱管理系统",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "db:init": "wrangler d1 execute temp-email-db --file=./db/schema.sql",
    "db:migrate": "wrangler d1 migrations apply temp-email-db",
    "db:backup": "wrangler d1 export temp-email-db --output=backup.sql",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "email",
    "temporary",
    "d1",
    "r2",
    "webhook",
    "临时邮箱"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "wrangler": "^4.32.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "hono": "^3.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/XRSec/cloudflare-email-manager.git"
  },
  "bugs": {
    "url": "https://github.com/XRSec/cloudflare-email-manager/issues"
  },
  "homepage": "https://github.com/XRSec/cloudflare-email-manager#readme"
}
